<Window x:Class="StartupManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Startup Manager" Height="450" Width="800">
    <Grid>
        <GroupBox Header="Startup Programs" Grid.Row="0" Margin="10">
            <StackPanel>
                <ListBox Name="StartupProgramsList" Height="200" Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Name="AddButton" Content="Add" Width="75" Margin="5" Click="AddButton_Click"/>
                    <Button Name="RemoveButton" Content="Remove" Width="75" Margin="5" Click="RemoveButton_Click"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>